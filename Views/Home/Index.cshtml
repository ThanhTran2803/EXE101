    <!-- Modal -->
    <div class="modal fade"
         id="createNewPost"
         tabindex="-1"
         role="dialog"
         aria-labelledby="createNewPostLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document" style="
    margin-top: 14rem; width: 40rem
">
            <div class="modal-content" >
                <div class="modal-header">
                    <h5 class="modal-title"
                        id="createNewPostLabel"
                        style="color: black">
                        Create new Post
                    </h5>
                    <button type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">What do you think right now?</div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
